{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/events/archive-ingested.schema.json",
  "title": "ArchiveIngested Event",
  "description": "Event published when an archive is successfully ingested. The file_path field is deprecated and optional for backward compatibility. New consumers should use archive_id with ArchiveStore to retrieve archive content.",
  "allOf": [
    { "$ref": "./event-envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "ArchiveIngested" },
        "data": {
          "type": "object",
          "properties": {
            "archive_id": {
              "type": "string",
              "minLength": 16,
              "maxLength": 64,
              "pattern": "^[0-9a-f]{16,64}$",
              "description": "archives._id (16-64 hex) - Use with ArchiveStore.get_archive() to retrieve content"
            },
            "source_name": { "type": "string", "minLength": 1 },
            "source_type": { "type": "string", "enum": ["rsync", "imap", "http", "local"] },
            "source_url": { "type": "string", "minLength": 1 },
            "file_path": { 
              "type": "string", 
              "minLength": 1,
              "deprecated": true,
              "description": "DEPRECATED: Local file path (not storage-agnostic). Use archive_id with ArchiveStore instead."
            },
            "file_size_bytes": { "type": "integer", "minimum": 0 },
            "file_hash_sha256": { "type": "string", "minLength": 1 },
            "ingestion_started_at": { "type": "string", "format": "date-time" },
            "ingestion_completed_at": { "type": "string", "format": "date-time" }
          },
          "required": [
            "archive_id",
            "source_name",
            "source_type",
            "source_url",
            "file_size_bytes",
            "file_hash_sha256",
            "ingestion_started_at",
            "ingestion_completed_at"
          ],
          "additionalProperties": false
        }
      },
      "required": ["event_type", "event_id", "timestamp", "version", "data"],
      "additionalProperties": false
    }
  ]
}
