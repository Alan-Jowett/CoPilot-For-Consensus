{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/events/source-cleanup-completed.schema.json",
  "title": "SourceCleanupCompleted Event",
  "description": "Event published when cascade cleanup for a deleted source has completed across all services.",
  "allOf": [
    { "$ref": "./event-envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "SourceCleanupCompleted" },
        "data": {
          "type": "object",
          "properties": {
            "source_name": {
              "type": "string",
              "minLength": 1,
              "description": "Name of the source that was cleaned up"
            },
            "correlation_id": {
              "type": "string",
              "format": "uuid",
              "description": "Correlation ID from the original SourceDeletionRequested event"
            },
            "completed_at": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp when overall cleanup completed"
            },
            "total_deletion_counts": {
              "type": "object",
              "description": "Aggregate counts of deleted items across all services",
              "additionalProperties": {
                "type": "integer",
                "minimum": 0
              }
            },
            "services_completed": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of services that successfully completed cleanup"
            },
            "services_failed": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of services that failed cleanup"
            },
            "overall_status": {
              "type": "string",
              "enum": ["success", "partial_success", "failed"],
              "description": "Overall cleanup status"
            }
          },
          "required": [
            "source_name",
            "correlation_id",
            "completed_at",
            "total_deletion_counts",
            "services_completed",
            "services_failed",
            "overall_status"
          ],
          "additionalProperties": false
        }
      },
      "required": ["event_type", "event_id", "timestamp", "version", "data"],
      "additionalProperties": false
    }
  ]
}
