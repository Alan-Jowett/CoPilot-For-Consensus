{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/events/source-deletion-requested.schema.json",
  "title": "SourceDeletionRequested Event",
  "description": "Event published when a source is deleted with cascade semantics, initiating distributed cleanup across all services.",
  "allOf": [
    { "$ref": "./event-envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "SourceDeletionRequested" },
        "data": {
          "type": "object",
          "properties": {
            "source_name": {
              "type": "string",
              "minLength": 1,
              "description": "Name of the source being deleted"
            },
            "correlation_id": {
              "type": "string",
              "format": "uuid",
              "description": "Stable idempotency key for tracking cleanup across services"
            },
            "requested_at": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp when deletion was requested"
            },
            "archive_ids": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[0-9a-f]{16,64}$"
              },
              "description": "Optional list of archive IDs associated with this source to accelerate downstream deletes"
            },
            "delete_mode": {
              "type": "string",
              "enum": ["hard"],
              "description": "Deletion mode (currently only 'hard' is supported)"
            },
            "reason": {
              "type": "string",
              "description": "Optional reason for deletion"
            },
            "requested_by": {
              "type": "string",
              "description": "Optional identifier of who/what requested the deletion"
            }
          },
          "required": [
            "source_name",
            "correlation_id",
            "requested_at"
          ],
          "additionalProperties": false
        }
      },
      "required": ["event_type", "event_id", "timestamp", "version", "data"],
      "additionalProperties": false
    }
  ]
}
