{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Event retry adapter",
    "type": "object",
    "properties": {
        "discriminant": {
            "field": "event_retry_type",
            "type": "string",
            "source": "env",
            "env_var": "EVENT_RETRY_TYPE",
            "enum": ["default", "noop"],
            "default": "default",
            "required": false,
            "description": "Event retry policy type (default, noop)"
        },
        "drivers": {
            "type": "object",
            "properties": {
                "default": { "$ref": "./drivers/event_retry/event_retry_default.json" },
                "noop": { "$ref": "./drivers/event_retry/event_retry_noop.json" }
            },
            "additionalProperties": false
        }
    },
    "required": ["discriminant", "drivers"]
}
