{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Sentry error reporter driver settings",
    "type": "object",
    "properties": {
        "dsn": {
            "type": "string",
            "source": "env",
            "env_var": "SENTRY_DSN",
            "required": false,
            "description": "Sentry DSN for reporting errors"
        },
        "environment": {
            "type": "string",
            "source": "env",
            "env_var": "SENTRY_ENVIRONMENT",
            "default": "production",
            "required": false,
            "description": "Environment name to tag Sentry events"
        }
    },
    "additionalProperties": false
}
