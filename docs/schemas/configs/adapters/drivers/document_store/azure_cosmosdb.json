{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Azure Cosmos DB driver settings",
    "type": "object",
    "properties": {
        "endpoint": {
            "type": "string",
            "source": "env",
            "env_var": "COSMOS_ENDPOINT",
            "description": "Cosmos DB endpoint URL (e.g., https://myaccount.documents.azure.com:443/)"
        },
        "key": {
            "type": "string",
            "source": "secret",
            "secret_name": "cosmos_key",
            "required": false,
            "description": "Cosmos DB account key (optional if using managed identity)"
        },
        "database": {
            "type": "string",
            "source": "env",
            "env_var": "COSMOS_DATABASE",
            "default": "copilot",
            "description": "Cosmos DB database name"
        },
        "container": {
            "type": "string",
            "source": "env",
            "env_var": "COSMOS_CONTAINER",
            "default": "documents",
            "description": "Cosmos DB container name"
        },
        "partition_key": {
            "type": "string",
            "source": "env",
            "env_var": "COSMOS_PARTITION_KEY",
            "default": "/collection",
            "description": "Cosmos DB partition key path"
        },
        "container_routing_mode": {
            "type": "string",
            "source": "env",
            "env_var": "COSMOS_CONTAINER_ROUTING_MODE",
            "default": "legacy",
            "enum": ["legacy", "per_type"],
            "description": "Container routing mode: 'legacy' uses single container for all collections (default), 'per_type' routes each collection type to its own container"
        }
    },
    "required": ["endpoint"]
}
