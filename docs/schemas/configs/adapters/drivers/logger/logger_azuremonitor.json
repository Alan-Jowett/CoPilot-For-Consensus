{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Azure Monitor logger driver settings",
    "type": "object",
    "properties": {
        "instrumentation_key": {
            "type": "string",
            "source": "secret",
            "secret_name": "azure_monitor_instrumentation_key",
            "required": false,
            "description": "Application Insights instrumentation key for Azure Monitor logging"
        },
        "console_log": {
            "type": "bool",
            "source": "env",
            "env_var": "AZURE_MONITOR_CONSOLE_LOG",
            "default": false,
            "required": false,
            "description": "Also log to console when using Azure Monitor"
        }
    },
    "additionalProperties": false
}
