{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Silent logger driver settings",
    "type": "object",
    "properties": {
        "level": {
            "type": "string",
            "source": "env",
            "env_var": "LOG_LEVEL",
            "default": "INFO",
            "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
            "description": "Logging level for silent logger"
        },
        "name": {
            "type": "string",
            "source": "env",
            "env_var": "LOG_NAME",
            "required": false,
            "description": "Logger name (optional)"
        }
    },
    "required": [],
    "additionalProperties": false
}
