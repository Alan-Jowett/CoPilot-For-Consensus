{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Vault secret provider driver settings",
    "type": "object",
    "properties": {
        "vault_endpoint": {
            "type": "string",
            "source": "env",
            "env_var": "VAULT_ENDPOINT",
            "required": false,
            "description": "Vault server endpoint URL (when SECRET_PROVIDER_TYPE=vault)"
        },
        "vault_token": {
            "type": "string",
            "source": "secret",
            "secret_name": "vault_token",
            "required": false,
            "description": "Vault authentication token (when SECRET_PROVIDER_TYPE=vault)"
        },
        "vault_namespace": {
            "type": "string",
            "source": "env",
            "env_var": "VAULT_NAMESPACE",
            "required": false,
            "description": "Vault namespace (when SECRET_PROVIDER_TYPE=vault)"
        },
        "vault_mount_path": {
            "type": "string",
            "source": "env",
            "env_var": "VAULT_MOUNT_PATH",
            "default": "secret",
            "description": "Vault mount path for secrets (when SECRET_PROVIDER_TYPE=vault)"
        },
        "vault_use_managed_identity": {
            "type": "bool",
            "source": "env",
            "env_var": "VAULT_USE_MANAGED_IDENTITY",
            "default": false,
            "description": "Use Azure Managed Identity for Vault authentication (when SECRET_PROVIDER_TYPE=vault)"
        }
    },
    "required": ["vault_endpoint"]
}
