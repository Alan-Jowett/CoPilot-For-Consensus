{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Ollama embedding backend driver settings",
    "type": "object",
    "properties": {
        "ollama_endpoint": {
            "type": "string",
            "source": "env",
            "env_var": "OLLAMA_ENDPOINT",
            "default": "http://ollama:11434",
            "description": "Ollama server endpoint URL"
        },
        "ollama_model_name": {
            "type": "string",
            "source": "env",
            "env_var": "OLLAMA_MODEL_NAME",
            "default": "nomic-embed-text",
            "description": "Ollama embedding model name"
        }
    }
}
