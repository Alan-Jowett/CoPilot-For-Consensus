{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "FAISS vector store driver settings",
    "type": "object",
    "properties": {
        "dimension": {
            "type": "int",
            "source": "env",
            "env_var": "EMBEDDING_DIMENSION",
            "default": 384,
            "description": "Embedding vector dimension"
        },
        "index_type": {
            "type": "string",
            "source": "env",
            "env_var": "VECTOR_STORE_INDEX_TYPE",
            "default": "flat",
            "description": "FAISS index type (flat, ivf)"
        },
        "persist_path": {
            "type": "string",
            "source": "env",
            "env_var": "VECTOR_STORE_PERSIST_PATH",
            "required": false,
            "description": "Optional path to persist the index"
        }
    },
    "required": ["dimension", "index_type"]
}