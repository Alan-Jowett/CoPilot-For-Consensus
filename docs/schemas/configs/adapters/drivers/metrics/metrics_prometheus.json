{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Prometheus metrics driver settings",
    "type": "object",
    "properties": {
        "registry": {
            "type": "object",
            "required": false,
            "description": "Optional Prometheus registry instance"
        },
        "namespace": {
            "type": "string",
            "required": false,
            "default": "copilot",
            "description": "Namespace prefix for all metrics"
        },
        "raise_on_error": {
            "type": "boolean",
            "required": false,
            "default": false,
            "description": "Whether to raise exceptions on metric errors"
        }
    }
}