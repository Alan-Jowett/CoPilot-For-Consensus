{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Azure Monitor metrics driver settings",
    "type": "object",
    "properties": {
        "connection_string": {
            "type": "string",
            "source": "secret",
            "secret_name": "azure_connection_string",
            "required": true,
            "minLength": 1,
            "description": "Azure Monitor connection string (e.g., InstrumentationKey=... or Connection string)"
        },
        "namespace": {
            "type": "string",
            "required": false,
            "default": "copilot",
            "minLength": 1,
            "description": "Namespace prefix for all metrics"
        },
        "export_interval_millis": {
            "type": "integer",
            "required": false,
            "default": 60000,
            "description": "Export interval in milliseconds"
        },
        "raise_on_error": {
            "type": "boolean",
            "required": false,
            "default": false,
            "description": "Whether to raise exceptions on metric errors"
        }
    }
}
