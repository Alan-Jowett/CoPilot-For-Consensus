{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "llama.cpp LLM driver settings",
    "type": "object",
    "properties": {
        "llamacpp_model": {
            "type": "string",
            "source": "env",
            "env_var": "SUMMARIZATION_LLM_MODEL",
            "default": "mistral",
            "description": "llama.cpp model name"
        },
        "llamacpp_endpoint": {
            "type": "string",
            "source": "env",
            "env_var": "SUMMARIZATION_LLAMACPP_ENDPOINT",
            "default": "http://llama-cpp:8081",
            "description": "llama.cpp server endpoint URL"
        },
        "llamacpp_timeout_seconds": {
            "type": "int",
            "source": "env",
            "env_var": "SUMMARIZATION_LLM_TIMEOUT_SECONDS",
            "default": 300,
            "description": "Request timeout in seconds"
        }
    }
}
