{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Local LLM (Ollama) driver settings",
    "type": "object",
    "properties": {
        "local_llm_model": {
            "type": "string",
            "source": "env",
            "env_var": "LLM_MODEL",
            "default": "mistral",
            "description": "Local model name (e.g., mistral, llama2)"
        },
        "local_llm_endpoint": {
            "type": "string",
            "source": "env",
            "env_var": "LOCAL_LLM_ENDPOINT",
            "default": "http://ollama:11434",
            "description": "Local LLM endpoint URL (e.g., Ollama)"
        },
        "local_llm_timeout_seconds": {
            "type": "int",
            "source": "env",
            "env_var": "LLM_TIMEOUT_SECONDS",
            "default": 300,
            "description": "Request timeout in seconds"
        }
    }
}
