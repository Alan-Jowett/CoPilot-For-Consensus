{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Azure OpenAI LLM driver settings",
    "type": "object",
    "properties": {
        "azure_openai_api_key": {
            "type": "string",
            "source": "secret",
            "secret_name": "summarization_azure_openai_api_key",
            "required": true,
            "description": "Azure OpenAI API key"
        },
        "azure_openai_endpoint": {
            "type": "string",
            "source": "env",
            "env_var": "SUMMARIZATION_AZURE_OPENAI_ENDPOINT",
            "required": true,
            "description": "Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com/)"
        },
        "azure_openai_deployment": {
            "type": "string",
            "source": "env",
            "env_var": "SUMMARIZATION_AZURE_OPENAI_DEPLOYMENT",
            "required": false,
            "description": "Azure OpenAI deployment name"
        },
        "azure_openai_model": {
            "type": "string",
            "source": "env",
            "env_var": "SUMMARIZATION_LLM_MODEL",
            "required": true,
            "description": "Model name (used when invoking Azure OpenAI deployment)"
        },
        "azure_openai_api_version": {
            "type": "string",
            "source": "env",
            "env_var": "SUMMARIZATION_AZURE_OPENAI_API_VERSION",
            "default": "2023-12-01",
            "description": "Azure OpenAI API version"
        }
    }
}
