{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Microsoft OAuth OIDC provider driver settings",
    "type": "object",
    "properties": {
        "microsoft_client_id": {
            "type": "string",
            "source": "secret",
            "secret_name": "microsoft_oauth_client_id",
            "required": false,
            "description": "Microsoft OAuth client ID"
        },
        "microsoft_client_secret": {
            "type": "string",
            "source": "secret",
            "secret_name": "microsoft_oauth_client_secret",
            "required": false,
            "description": "Microsoft OAuth client secret"
        },
        "microsoft_redirect_uri": {
            "type": "string",
            "source": "env",
            "env_var": "MICROSOFT_REDIRECT_URI",
            "required": false,
            "description": "Microsoft OAuth callback URL (defaults to {issuer}/callback)"
        },
        "microsoft_tenant": {
            "type": "string",
            "source": "env",
            "env_var": "MICROSOFT_TENANT",
            "default": "common",
            "description": "Microsoft tenant ID"
        }
    }
}
