{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "GitHub OAuth OIDC provider driver settings",
    "type": "object",
    "properties": {
        "github_api_base_url": {
            "type": "string",
            "source": "env",
            "env_var": "GITHUB_API_BASE_URL",
            "default": "https://api.github.com",
            "description": "GitHub API base URL"
        },
        "github_client_id": {
            "type": "string",
            "source": "secret",
            "secret_name": "github_oauth_client_id",
            "required": false,
            "description": "GitHub OAuth client ID"
        },
        "github_client_secret": {
            "type": "string",
            "source": "secret",
            "secret_name": "github_oauth_client_secret",
            "required": false,
            "description": "GitHub OAuth client secret"
        },
        "github_redirect_uri": {
            "type": "string",
            "source": "env",
            "env_var": "GITHUB_REDIRECT_URI",
            "required": false,
            "description": "GitHub OAuth callback URL (defaults to {issuer}/callback)"
        }
    }
}
