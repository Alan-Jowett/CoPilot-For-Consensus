{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Consensus Detector adapter",
    "type": "object",
    "properties": {
        "discriminant": {
            "field": "consensus_detector_type",
            "type": "string",
            "source": "env",
            "env_var": "CONSENSUS_DETECTOR_TYPE",
            "enum": [
                "heuristic",
                "mock",
                "ml"
            ],
            "description": "Consensus detector type (heuristic, mock, ml)"
        },
        "drivers": {
            "type": "object",
            "properties": {
                "heuristic": {
                    "$ref": "./drivers/consensus_detector/heuristic.json"
                },
                "mock": {
                    "$ref": "./drivers/consensus_detector/mock.json"
                },
                "ml": {
                    "$ref": "./drivers/consensus_detector/ml.json"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "discriminant",
        "drivers"
    ]
}
