{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Draft Diff Provider Adapter",
    "type": "object",
    "properties": {
        "discriminant": {
            "field": "draft_diff_provider_type",
            "type": "string",
            "source": "env",
            "env_var": "DRAFT_DIFF_PROVIDER_TYPE",
            "enum": ["datatracker", "mock"],
            "description": "Draft diff provider type (datatracker, mock)"
        },
        "drivers": {
            "type": "object",
            "properties": {
                "datatracker": { "$ref": "./drivers/draft_diff_provider/datatracker.json" },
                "mock": { "$ref": "./drivers/draft_diff_provider/mock.json" }
            },
            "additionalProperties": false
        }
    },
    "required": ["discriminant", "drivers"]
}
