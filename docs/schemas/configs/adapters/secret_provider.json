{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Secret provider adapter",
    "type": "object",
    "properties": {
        "discriminant": {
            "field": "secret_provider_type",
            "type": "string",
            "source": "env",
            "env_var": "SECRET_PROVIDER_TYPE",
            "enum": ["local", "azure_key_vault"],
            "description": "Secret provider backend type (local, azure_key_vault)"
        },
        "drivers": {
            "type": "object",
            "properties": {
                "local": {"$ref": "./drivers/secret_provider/secret_local.json"},
                "azure_key_vault": {"$ref": "./drivers/secret_provider/secret_azure_key_vault.json"}
            },
            "additionalProperties": false
        }
    },
    "required": ["discriminant", "drivers"]
}