{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Archive store adapter - choose one archive backend",
    "type": "object",
    "properties": {
        "discriminant": {
            "field": "archive_store_type",
            "type": "string",
            "source": "env",
            "env_var": "ARCHIVE_STORE_TYPE",
            "enum": ["local", "azureblob"],
            "required": true,
            "description": "Archive store type (local, azureblob)"
        },
        "drivers": {
            "type": "object",
            "properties": {
                "local": { "$ref": "./drivers/archive/archive_local.json" },
                "azureblob": { "$ref": "./drivers/archive/archive_azureblob.json" }
            },
            "additionalProperties": false
        }
    },
    "required": ["discriminant", "drivers"]
}
