{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "JWT Signer adapter",
    "type": "object",
    "properties": {
        "discriminant": {
            "field": "signer_type",
            "type": "string",
            "source": "env",
            "env_var": "JWT_SIGNER_TYPE",
            "enum": ["local", "keyvault"],
            "description": "JWT signing backend type (local for file-based keys, keyvault for Azure Key Vault)"
        },
        "drivers": {
            "type": "object",
            "properties": {
                "local": {
                    "$ref": "./drivers/jwt_signer/local.json"
                },
                "keyvault": {
                    "$ref": "./drivers/jwt_signer/keyvault.json"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "discriminant",
        "drivers"
    ]
}
