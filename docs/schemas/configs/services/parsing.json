{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "service_name": "parsing",
    "schema_version": "1.0.0",
    "min_service_version": "0.1.0",
    "metadata": {
        "description": "Parsing service configuration schema",
        "version": "1.0.0"
    },
    "service_settings": {
        "http_port": {
            "type": "int",
            "source": "env",
            "env_var": "PARSING_HTTP_PORT",
            "default": 8000,
            "description": "HTTP server port"
        },
        "http_host": {
            "type": "string",
            "source": "env",
            "env_var": "PARSING_HTTP_HOST",
            "default": "0.0.0.0",
            "description": "HTTP server host"
        },
        "jwt_auth_enabled": {
            "type": "bool",
            "source": "env",
            "env_var": ["PARSING_JWT_AUTH_ENABLED", "JWT_AUTH_ENABLED"],
            "default": true,
            "description": "Enable JWT authentication middleware (supports global JWT_AUTH_ENABLED alias)"
        },
        "auth_service_url": {
            "type": "string",
            "source": "env",
            "env_var": "PARSING_AUTH_SERVICE_URL",
            "default": "http://auth:8090",
            "description": "URL of the authentication service"
        },
        "service_audience": {
            "type": "string",
            "source": "env",
            "env_var": "PARSING_SERVICE_AUDIENCE",
            "default": "copilot-for-consensus",
            "description": "JWT audience for this service"
        },
        "max_retries": {
            "type": "int",
            "source": "env",
            "env_var": "PARSING_RETRY_MAX_ATTEMPTS",
            "default": 3,
            "description": "Maximum retry attempts"
        },
        "retry_delay_seconds": {
            "type": "int",
            "source": "env",
            "env_var": "PARSING_RETRY_DELAY_SECONDS",
            "default": 5,
            "description": "Retry delay in seconds"
        }
    },
    "adapters": {
        "archive_store": {
            "$ref": "../adapters/archive_store.json",
            "required": true
        },
        "document_store": {
            "$ref": "../adapters/document_store.json",
            "required": true
        },
        "error_reporter": {
            "$ref": "../adapters/error_reporter.json",
            "required": true
        },
        "logger": {
            "$ref": "../adapters/logger.json",
            "required": true
        },
        "message_bus": {
            "$ref": "../adapters/message_bus.json",
            "required": true
        },
        "metrics": {
            "$ref": "../adapters/metrics.json",
            "required": true
        },
        "secret_provider": {
            "$ref": "../adapters/secret_provider.json",
            "required": true
        }
    }
}