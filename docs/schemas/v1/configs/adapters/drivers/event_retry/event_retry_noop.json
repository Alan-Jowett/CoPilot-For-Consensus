{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "title": "Event retry (noop) driver",
    "type": "object",
    "properties": {
        "max_attempts": {
            "type": "int",
            "default": 1,
            "description": "Disable event retry by limiting to 1 attempt"
        },
        "base_delay_ms": {
            "type": "int",
            "default": 0,
            "description": "No delay"
        },
        "backoff_factor": {
            "type": "float",
            "default": 1.0,
            "description": "No backoff"
        },
        "max_delay_ms": {
            "type": "int",
            "default": 0,
            "description": "No delay cap needed"
        },
        "ttl_seconds": {
            "type": "int",
            "default": 0,
            "description": "No retry TTL"
        }
    }
}
