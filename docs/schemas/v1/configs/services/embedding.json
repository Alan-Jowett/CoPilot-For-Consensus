{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "SPDX-License-Identifier: MIT\nCopyright (c) 2025 Copilot-for-Consensus contributors",
    "service_name": "embedding",
    "schema_version": "1.0.0",
    "min_service_version": "0.1.0",
    "metadata": {
        "description": "Embedding service configuration schema",
        "version": "1.0.0"
    },
    "service_settings": {
        "batch_size": {
            "type": "int",
            "source": "env",
            "env_var": "EMBEDDING_BATCH_SIZE",
            "default": 32,
            "description": "Batch size for embedding requests"
        },
        "enable_cache": {
            "type": "bool",
            "source": "env",
            "env_var": "EMBEDDING_ENABLE_CACHE",
            "default": true,
            "description": "Enable caching of embeddings"
        },
        "cache_ttl_seconds": {
            "type": "int",
            "source": "env",
            "env_var": "EMBEDDING_CACHE_TTL_SECONDS",
            "default": 86400,
            "description": "Cache time-to-live in seconds (default: 24 hours)"
        },
        "http_port": {
            "type": "int",
            "source": "env",
            "env_var": "EMBEDDING_HTTP_PORT",
            "default": 8000,
            "description": "HTTP server port"
        },
        "http_host": {
            "type": "string",
            "source": "env",
            "env_var": "EMBEDDING_HTTP_HOST",
            "default": "0.0.0.0",
            "description": "HTTP server host"
        },
        "jwt_auth_enabled": {
            "type": "bool",
            "source": "env",
            "env_var": ["EMBEDDING_JWT_AUTH_ENABLED", "JWT_AUTH_ENABLED"],
            "default": true,
            "description": "Enable JWT authentication middleware (supports global JWT_AUTH_ENABLED alias)"
        },
        "auth_service_url": {
            "type": "string",
            "source": "env",
            "env_var": "EMBEDDING_AUTH_SERVICE_URL",
            "default": "http://auth:8090",
            "description": "URL of the authentication service"
        },
        "service_audience": {
            "type": "string",
            "source": "env",
            "env_var": "EMBEDDING_SERVICE_AUDIENCE",
            "default": "copilot-for-consensus",
            "description": "JWT audience for this service"
        },
        "max_retries": {
            "type": "int",
            "source": "env",
            "env_var": "EMBEDDING_RETRY_MAX_ATTEMPTS",
            "default": 3,
            "description": "Maximum retry attempts"
        },
        "retry_backoff_seconds": {
            "type": "int",
            "source": "env",
            "env_var": "EMBEDDING_RETRY_BACKOFF_SECONDS",
            "default": 5,
            "description": "Backoff delay between retries in seconds"
        },
        "request_timeout_seconds": {
            "type": "int",
            "source": "env",
            "env_var": "EMBEDDING_REQUEST_TIMEOUT_SECONDS",
            "default": 30,
            "description": "Request timeout in seconds"
        }
    },
    "adapters": {
        "event_retry": {
            "$ref": "../adapters/event_retry.json",
            "required": true
        },
        "document_store": {
            "$ref": "../adapters/document_store.json",
            "required": true
        },
        "logger": {
            "$ref": "../adapters/logger.json",
            "required": true
        },
        "embedding_backend": {
            "$ref": "../adapters/embedding_backend.json",
            "required": true
        },
        "error_reporter": {
            "$ref": "../adapters/error_reporter.json",
            "required": true
        },
        "message_bus": {
            "$ref": "../adapters/message_bus.json",
            "required": true
        },
        "metrics": {
            "$ref": "../adapters/metrics.json",
            "required": true
        },
        "secret_provider": {
            "$ref": "../adapters/secret_provider.json",
            "required": true
        },
        "vector_store": {
            "$ref": "../adapters/vector_store.json",
            "required": true
        }
    }
}
