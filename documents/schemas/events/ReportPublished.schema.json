{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/events/report-published.schema.json",
  "title": "ReportPublished Event",
  "allOf": [
    { "$ref": "../event-envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "ReportPublished" },
        "data": {
          "type": "object",
          "properties": {
            "thread_id": { "type": "string", "minLength": 1 },
            "report_id": { "type": "string", "minLength": 1 },
            "format": { "type": "string", "minLength": 1 },
            "notified": { "type": "boolean" },
            "delivery_channels": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 },
              "minItems": 0,
              "uniqueItems": true
            },
            "summary_url": { "type": "string", "minLength": 1 }
          },
          "required": [
            "thread_id",
            "report_id",
            "format",
            "notified",
            "delivery_channels",
            "summary_url"
          ],
          "additionalProperties": false
        }
      },
      "required": ["event_type", "event_id", "timestamp", "version", "data"],
      "additionalProperties": false
    }
  ]
}
