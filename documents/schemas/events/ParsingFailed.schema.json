{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/events/parsing-failed.schema.json",
  "title": "ParsingFailed Event",
  "allOf": [
    { "$ref": "../event-envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "ParsingFailed" },
        "data": {
          "type": "object",
          "properties": {
            "archive_id": { "type": "string", "format": "uuid" },
            "file_path": { "type": "string", "minLength": 1 },
            "error_message": { "type": "string", "minLength": 1 },
            "error_type": { "type": "string", "minLength": 1 },
            "messages_parsed_before_failure": { "type": "integer", "minimum": 0 },
            "retry_count": { "type": "integer", "minimum": 0 },
            "failed_at": { "type": "string", "format": "date-time" }
          },
          "required": [
            "archive_id",
            "file_path",
            "error_message",
            "error_type",
            "messages_parsed_before_failure",
            "retry_count",
            "failed_at"
          ],
          "additionalProperties": false
        }
      },
      "required": ["event_type", "event_id", "timestamp", "version", "data"],
      "additionalProperties": false
    }
  ]
}
