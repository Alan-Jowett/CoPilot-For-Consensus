{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/events/json-parsed.schema.json",
  "title": "JSONParsed Event",
  "allOf": [
    { "$ref": "./event-envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "JSONParsed" },
        "data": {
          "type": "object",
          "properties": {
            "archive_id": {
              "type": "string",
              "minLength": 16,
              "maxLength": 64,
              "pattern": "^[0-9a-f]{16,64}$",
              "description": "archives._id (16-64 hex)"
            },
            "message_count": { "type": "integer", "minimum": 0 },
            "message_keys": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[0-9a-f]{16,64}$" },
              "minItems": 1,
              "uniqueItems": true
            },
            "thread_count": { "type": "integer", "minimum": 0 },
            "thread_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[0-9a-f]{16,64}$" },
              "minItems": 0,
              "uniqueItems": true
            },
            "parsing_duration_seconds": { "type": "number", "minimum": 0 }
          },
          "required": [
            "archive_id",
            "message_count",
            "message_keys",
            "thread_count",
            "thread_ids",
            "parsing_duration_seconds"
          ],
          "additionalProperties": false
        }
      },
      "required": ["event_type", "event_id", "timestamp", "version", "data"],
      "additionalProperties": false
    }
  ]
}
