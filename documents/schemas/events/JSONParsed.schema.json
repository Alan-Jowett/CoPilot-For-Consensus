{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/events/json-parsed.schema.json",
  "title": "JSONParsed Event",
  "allOf": [
    { "$ref": "./event-envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "JSONParsed" },
        "data": {
          "type": "object",
          "properties": {
            "archive_id": { "type": "string", "format": "uuid" },
            "message_count": { "type": "integer", "minimum": 0 },
            "parsed_message_ids": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 },
              "minItems": 1,
              "uniqueItems": true
            },
            "thread_count": { "type": "integer", "minimum": 0 },
            "thread_ids": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 },
              "minItems": 0,
              "uniqueItems": true
            },
            "parsing_duration_seconds": { "type": "number", "minimum": 0 }
          },
          "required": [
            "archive_id",
            "message_count",
            "parsed_message_ids",
            "thread_count",
            "thread_ids",
            "parsing_duration_seconds"
          ],
          "additionalProperties": false
        }
      },
      "required": ["event_type", "event_id", "timestamp", "version", "data"],
      "additionalProperties": false
    }
  ]
}
