{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/documents/chunks.schema.json",
  "title": "chunks collection",
  "type": "object",
  "properties": {
    "chunk_key": { 
      "type": "string", 
      "minLength": 16,
      "maxLength": 64,
      "description": "Deterministic SHA256 hash of (message_key|chunk_index) for guaranteed uniqueness per message"
    },
    "chunk_id": { "type": "string", "minLength": 16, "description": "Transitional field: use chunk_key as the unique identifier. chunk_id is kept for backward compatibility but chunk_key should be preferred for new code." },
    "message_key": { "type": "string", "minLength": 16, "description": "Reference to parent message's message_key" },
    "message_id": { "type": "string", "minLength": 1 },
    "thread_id": { "type": "string", "minLength": 1 },
    "chunk_index": { "type": "integer", "minimum": 0 },
    "text": { "type": "string", "minLength": 1 },
    "token_count": { "type": "integer", "minimum": 0 },
    "start_offset": { 
      "anyOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "null" }
      ]
    },
    "end_offset": { 
      "anyOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "null" }
      ]
    },
    "overlap_with_previous": { "type": "boolean" },
    "metadata": {
      "type": "object",
      "properties": {
        "sender": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "subject": { "type": "string" }
      },
      "additionalProperties": true
    },
    "created_at": { "type": "string", "format": "date-time" },
    "embedding_generated": { "type": "boolean" },
    "attemptCount": { 
      "type": "integer", 
      "minimum": 0,
      "description": "Number of embedding generation attempts for retry tracking"
    },
    "lastAttemptTime": { 
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ],
      "description": "Timestamp of the last embedding generation attempt"
    }
  },
  "required": ["chunk_key", "message_key", "message_id", "thread_id", "chunk_index", "text", "created_at", "embedding_generated"]
}
