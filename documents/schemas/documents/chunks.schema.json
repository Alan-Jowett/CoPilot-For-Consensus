{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/documents/chunks.schema.json",
  "title": "chunks collection",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{16}$",
      "minLength": 16,
      "maxLength": 16,
      "description": "Canonical chunk document identifier (SHA256 hash of message_doc_id|chunk_index)"
    },
    "message_doc_id": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{16}$",
      "minLength": 16,
      "maxLength": 16,
      "description": "Reference to messages._id (canonical message document identifier we generate)"
    },
    "message_id": {
      "type": "string",
      "minLength": 1,
      "description": "RFC 5322 Message-ID header from the source email (external identifier)"
    },
    "thread_id": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{16}$",
      "minLength": 16,
      "maxLength": 16,
      "description": "Reference to threads._id (canonical thread identifier we generate)"
    },
    "chunk_index": { "type": "integer", "minimum": 0 },
    "text": { "type": "string", "minLength": 1 },
    "token_count": { "type": "integer", "minimum": 0 },
    "start_offset": {
      "anyOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "null" }
      ]
    },
    "end_offset": {
      "anyOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "null" }
      ]
    },
    "overlap_with_previous": { "type": "boolean" },
    "metadata": {
      "type": "object",
      "properties": {
        "sender": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "subject": { "type": "string" }
      },
      "additionalProperties": true
    },
    "created_at": { "type": "string", "format": "date-time" },
    "embedding_generated": { "type": "boolean" },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "completed", "failed", "failed_max_retries"],
      "description": "Processing status for retry and workflow tracking"
    },
    "attemptCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of embedding generation attempts for retry tracking"
    },
    "lastAttemptTime": {
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ],
      "description": "Timestamp of the last embedding generation attempt"
    }
  },
  "required": ["_id", "message_doc_id", "message_id", "thread_id", "chunk_index", "text", "created_at", "embedding_generated"]
}
