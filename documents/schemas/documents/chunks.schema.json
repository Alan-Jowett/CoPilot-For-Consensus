{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/documents/chunks.schema.json",
  "title": "chunks collection",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "minLength": 16,
      "maxLength": 64,
      "description": "Deterministic SHA256 hash of (message_id|chunk_index)"
    },
    "message_id": { "type": "string", "minLength": 1 },
    "thread_id": { "type": "string", "minLength": 1 },
    "chunk_index": { "type": "integer", "minimum": 0 },
    "text": { "type": "string", "minLength": 1 },
    "token_count": { "type": "integer", "minimum": 0 },
    "start_offset": { 
      "anyOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "null" }
      ]
    },
    "end_offset": { 
      "anyOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "null" }
      ]
    },
    "overlap_with_previous": { "type": "boolean" },
    "metadata": {
      "type": "object",
      "properties": {
        "sender": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "subject": { "type": "string" }
      },
      "additionalProperties": true
    },
    "created_at": { "type": "string", "format": "date-time" },
    "embedding_generated": { "type": "boolean" },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "completed", "failed", "failed_max_retries"],
      "description": "Processing status for retry and workflow tracking"
    },
    "attemptCount": { 
      "type": "integer", 
      "minimum": 0,
      "description": "Number of embedding generation attempts for retry tracking"
    },
    "lastAttemptTime": { 
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ],
      "description": "Timestamp of the last embedding generation attempt"
    }
  },
  "required": ["_id", "message_id", "thread_id", "chunk_index", "text", "created_at", "embedding_generated"]
}
