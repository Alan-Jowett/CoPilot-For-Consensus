{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/documents/messages.schema.json",
  "title": "messages collection",
  "type": "object",
  "properties": {
    "message_key": { 
      "type": "string", 
      "minLength": 16,
      "maxLength": 64,
      "description": "Deterministic SHA256 hash of (archive_id|message_id|date|sender_email|subject) for guaranteed global uniqueness and audit trail"
    },
    "message_id": { "type": "string", "minLength": 1 },
    "archive_id": { 
      "type": "string", 
      "minLength": 16,
      "maxLength": 64,
      "description": "SHA256 hash of the mbox file this message came from (first 16 chars)"
    },
    "thread_id": { "type": "string", "minLength": 1 },
    "in_reply_to": { 
      "anyOf": [
        { "type": "string", "minLength": 1 },
        { "type": "null" }
      ]
    },
    "references": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 0
    },
    "subject": { 
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ]
    },
    "from": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" }
          },
          "required": ["email"],
          "additionalProperties": false
        },
        { "type": "null" }
      ]
    },
    "to": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["email"],
        "additionalProperties": false
      },
      "minItems": 0
    },
    "cc": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["email"],
        "additionalProperties": false
      },
      "minItems": 0
    },
    "date": { 
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ]
    },
    "body_raw": { "type": "string" },
    "body_normalized": { "type": "string", "minLength": 1 },
    "body_html": { "type": "string" },
    "headers": { "type": "object" },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "filename": { "type": "string", "minLength": 1 },
          "content_type": { "type": "string", "minLength": 1 },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "hash_sha256": { "type": "string", "minLength": 1 }
        },
        "required": ["filename", "content_type", "size_bytes"],
        "additionalProperties": false
      },
      "minItems": 0
    },
    "draft_mentions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 0,
      "uniqueItems": true
    },
    "created_at": { "type": "string", "format": "date-time" },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "completed", "failed", "failed_max_retries"],
      "description": "Processing status for retry and workflow tracking"
    },
    "attemptCount": { 
      "type": "integer", 
      "minimum": 0,
      "description": "Number of processing attempts for retry tracking"
    },
    "lastAttemptTime": { 
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ],
      "description": "Timestamp of the last processing attempt"
    }
  },
  "required": ["message_key", "message_id", "archive_id", "thread_id", "body_normalized", "created_at"]
}
