{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/documents/messages.schema.json",
  "title": "messages collection",
  "type": "object",
  "properties": {
    "message_id": { "type": "string", "minLength": 1 },
    "archive_id": { "type": "string", "format": "uuid" },
    "thread_id": { "type": "string", "minLength": 1 },
    "in_reply_to": { "type": "string", "minLength": 1 },
    "references": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 0
    },
    "subject": { "type": ["string", "null"] },
    "from": {
      "type": ["object", "null"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["email"],
      "additionalProperties": false
    },
    "to": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["email"],
        "additionalProperties": false
      },
      "minItems": 0
    },
    "cc": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["email"],
        "additionalProperties": false
      },
      "minItems": 0
    },
    "date": { "type": ["string", "null"], "format": "date-time" },
    "body_raw": { "type": "string" },
    "body_normalized": { "type": "string", "minLength": 1 },
    "body_html": { "type": "string" },
    "headers": { "type": "object" },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "filename": { "type": "string", "minLength": 1 },
          "content_type": { "type": "string", "minLength": 1 },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "hash_sha256": { "type": "string", "minLength": 1 }
        },
        "required": ["filename", "content_type", "size_bytes"],
        "additionalProperties": false
      },
      "minItems": 0
    },
    "draft_mentions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 0,
      "uniqueItems": true
    },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "required": ["message_id", "archive_id", "thread_id", "body_normalized", "created_at"]
}
