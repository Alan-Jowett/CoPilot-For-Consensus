{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alan-jowett.github.io/CoPilot-For-Consensus/schemas/documents/threads.schema.json",
  "title": "threads collection",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "minLength": 16,
      "maxLength": 16,
      "pattern": "^[A-Fa-f0-9]{16}$",
      "description": "Deterministic thread identifier (e.g., root message or normalized subject lineage)"
    },
    "archive_id": {
      "type": "string",
      "minLength": 16,
      "maxLength": 16,
      "pattern": "^[A-Fa-f0-9]{16}$",
      "description": "16-hex-character prefix of the SHA256 hash of the mbox file this thread came from"
    },
    "subject": { "type": "string" },
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["email"],
        "additionalProperties": false
      },
      "minItems": 0
    },
    "message_count": { "type": "integer", "minimum": 0 },
    "first_message_date": {
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ]
    },
    "last_message_date": {
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ]
    },
    "draft_mentions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 0,
      "uniqueItems": true
    },
    "has_consensus": { "type": "boolean" },
    "consensus_type": {
      "anyOf": [
        { "type": "string", "enum": ["agreement", "dissent", "mixed"] },
        { "type": "null" }
      ]
    },
    "summary_id": {
      "anyOf": [
        { "type": "string", "minLength": 16, "maxLength": 16, "pattern": "^[A-Fa-f0-9]{16}$" },
        { "type": "null" }
      ],
      "description": "Reference to summaries._id"
    },
    "created_at": { "type": "string", "format": "date-time" },
    "status": {
      "type": "string",
      "enum": ["pending", "processing", "completed", "failed", "failed_max_retries"],
      "description": "Processing status for retry and workflow tracking"
    },
    "attemptCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of summarization attempts for retry tracking"
    },
    "lastAttemptTime": {
      "anyOf": [
        { "type": "string", "format": "date-time" },
        { "type": "null" }
      ],
      "description": "Timestamp of the last summarization attempt"
    }
  },
  "required": ["_id", "archive_id", "has_consensus", "created_at"]
}
