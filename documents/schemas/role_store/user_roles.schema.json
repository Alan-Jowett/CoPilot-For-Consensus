{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserRoles",
  "type": "object",
  "required": ["user_id", "provider", "roles", "status", "requested_at", "updated_at"],
  "properties": {
    "user_id": {
      "type": "string",
      "minLength": 1
    },
    "provider": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": ["string", "null"],
      "format": "email"
    },
    "name": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "status": {
      "type": "string",
      "enum": ["pending", "approved", "denied"]
    },
    "requested_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
