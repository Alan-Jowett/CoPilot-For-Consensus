{
  "service_name": "error-reporting",
  "metadata": {
    "description": "Error reporting service configuration schema",
    "version": "1.0.0"
  },
  "fields": {
    "http_port": {
      "type": "int",
      "source": "env",
      "env_var": "HTTP_PORT",
      "default": 8081,
      "description": "HTTP server port"
    },
    "max_errors": {
      "type": "int",
      "source": "env",
      "env_var": "MAX_ERRORS",
      "default": 10000,
      "description": "Maximum number of errors to store in memory"
    }
  }
}
