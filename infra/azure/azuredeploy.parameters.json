      "value": false
    },
    "serviceBusConnectionString": {
      "value": "REPLACE_WITH_YOUR_SERVICEBUS_CONNECTION_STRING"
    },
    "serviceBusNamespace": {
      "value": ""
    },
    "serviceBusResourceId": {
      "value": ""
    },
    "storageAccountConnectionString": {
      "value": "REPLACE_WITH_YOUR_STORAGE_CONNECTION_STRING"
    },
    "createNewIdentities": {
      "value": true
    },
    "llmBackend": {
      "value": "azure"
    },
    "azureOpenAIEndpoint": {
      "value": "REPLACE_WITH_YOUR_AZURE_OPENAI_ENDPOINT"
    },
    "azureOpenAIKey": {
      "value": "REPLACE_WITH_YOUR_AZURE_OPENAI_KEY"
    }
  }
