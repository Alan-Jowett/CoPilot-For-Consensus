{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectName": {
      "value": "copilot"
    },
    "environment": {
      "value": "dev"
    },
    "location": {
      "value": "eastus"
    },
    "deploymentMode": {
      "value": "admin"
    },
    "containerRegistryName": {
      "value": "ghcr.io/alan-jowett/copilot-for-consensus"
    },
    "containerImageTag": {
      "value": "latest"
    },
    "cosmosDbAccountName": {
      "value": "copilot-cosmos"
    },
    "cosmosDbDatabaseName": {
      "value": "copilot"
    },
    "cosmosDbContainerName": {
      "value": "documents"
    },
    "cosmosDbPartitionKey": {
      "value": "/collection"
    },
    "cosmosDbThroughput": {
      "value": 400
