# Deployment Configuration
# Choose deployment model: 'local' for self-contained with micro-LLMs, 'cloud' for Azure/cloud backends
DEPLOYMENT_MODE=local

# LLM Backend Configuration
# Options: 'local' (Ollama), 'azure', 'openai'
LLM_BACKEND=local

# Ollama Configuration (for local micro-LLM support)
OLLAMA_HOST=http://ollama:11434
# Common models: mistral, llama2, neural-chat, openchat
OLLAMA_MODEL=mistral

# Embedding Backend Configuration
# Options: 'sentencetransformers' (local, offline), 'azure', 'huggingface'
EMBEDDING_BACKEND=sentencetransformers

# Azure OpenAI Configuration (optional, for cloud deployment)
# Leave empty to use local models only
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=

# Database Configuration
VECTOR_DB_HOST=vectorstore
DOC_DB_HOST=documentdb
MESSAGE_BUS_HOST=messagebus
PROMETHEUS_HOST=monitoring

# MongoDB Configuration
# WARNING: Change these credentials before deploying to production!
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=PLEASE_CHANGE_ME

# Metrics Backend Configuration
# Options: 'noop' (testing/local dev), 'prometheus' (production observability)
METRICS_BACKEND=noop

# Consensus Detection Configuration
# Options: 'heuristic' (rule-based), 'mock' (testing), 'ml' (future ML-based)
CONSENSUS_DETECTOR_TYPE=heuristic

