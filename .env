# =============================================================================
# SECRETS & CREDENTIALS
# WARNING: Change all default passwords before deploying to production!
# =============================================================================

# Document Store Admin Credentials
DOC_DB_ADMIN_USERNAME=admin
DOC_DB_ADMIN_PASSWORD=PLEASE_CHANGE_ME

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=PLEASE_CHANGE_ME

# RabbitMQ Credentials
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Azure OpenAI API Keys (optional - only needed for cloud deployment)
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=

# =============================================================================
# USER-CONFIGURABLE OPTIONS
# These control behavior and can vary between dev/staging/prod environments
# =============================================================================

# LLM Backend Selection
# Options: 'local' (uses Ollama), 'azure', 'mock' (for testing)
LLM_BACKEND=local

# LLM Model (when using Ollama)
# Common models: mistral, llama2, neural-chat, openchat
LLM_MODEL=mistral

# Embedding Backend Selection
# Options: 'sentencetransformers' (local, offline), 'azure', 'huggingface'
EMBEDDING_BACKEND=sentencetransformers

# Metrics Backend Selection
# Options: 'noop' (local dev/testing), 'prometheus_pushgateway' (production)
METRICS_BACKEND=prometheus_pushgateway

# Consensus Detection Strategy
# Options: 'heuristic' (rule-based), 'mock' (testing), 'ml' (future ML-based)
CONSENSUS_DETECTOR_TYPE=heuristic

# =============================================================================
# AUTHENTICATION SERVICE CONFIGURATION
# =============================================================================

# Auth Service Settings
AUTH_ISSUER=http://localhost:8090
AUTH_AUDIENCES=copilot-orchestrator,copilot-reporting

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_KEY_ID=default
JWT_DEFAULT_EXPIRY=1800

# OIDC Provider Credentials (optional - configure as needed)
# GitHub OAuth
AUTH_GITHUB_CLIENT_ID=
AUTH_GITHUB_CLIENT_SECRET=
AUTH_GITHUB_REDIRECT_URI=http://localhost:8090/callback

# Google OAuth
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=
AUTH_GOOGLE_REDIRECT_URI=http://localhost:8090/callback

# Microsoft Entra ID
AUTH_MS_CLIENT_ID=
AUTH_MS_CLIENT_SECRET=
AUTH_MS_REDIRECT_URI=http://localhost:8090/callback
AUTH_MS_TENANT=common

# Security Settings
AUTH_REQUIRE_PKCE=true
AUTH_REQUIRE_NONCE=true
AUTH_MAX_SKEW_SECONDS=90
AUTH_ENABLE_DPOP=false

