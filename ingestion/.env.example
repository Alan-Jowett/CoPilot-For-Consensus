# Example environment variables for the Ingestion Service
# Copy this file to .env and update values as needed

# Storage Configuration
STORAGE_PATH=/data/raw_archives
CONFIG_FILE=/app/config.yaml

# Message Bus Configuration (RabbitMQ)
MESSAGE_BUS_HOST=messagebus
MESSAGE_BUS_PORT=5672
MESSAGE_BUS_USER=guest
MESSAGE_BUS_PASSWORD=guest
MESSAGE_BUS_TYPE=rabbitmq

# Service Configuration
LOG_LEVEL=INFO
INGESTION_SCHEDULE_CRON=0 */6 * * *

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=60

# Blob Storage Configuration (optional)
BLOB_STORAGE_ENABLED=false
BLOB_STORAGE_CONTAINER=raw-archives

# IMAP Credentials (if using IMAP sources)
# IMAP_USERNAME=user@example.com
# IMAP_PASSWORD=password

# For development/testing, use these settings:
# MESSAGE_BUS_TYPE=noop
# LOG_LEVEL=DEBUG
